<section style="" class="hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-7">
        <h1>Mixbook<br>Developers Blog</h1>
      </div>
    </div>
  </div>
</section>

<section class="featured-posts">
  <div class="container">
    <% @posts.each do |post| %>
      <%= render 'post', {post: post} %>
    <% end %>

    <% if @posts.length.zero? %>
      <h3>Nobody has written here yet. <%= link_to 'Be first!', new_post_path %></h3>
    <% end %>
  </div>
</section>