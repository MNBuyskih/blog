<div class="post-single">
  <div class="post-thumbnail">
    <img src="<%= @post.image %>" alt="..." class="img-fluid">
  </div>
  <div class="post-details">
    <div class="post-meta d-flex justify-content-between">
      <div class="category">
        <a href="#"><%= @post.category.title %></a>
      </div>
    </div>
    <h1><%= @post.title %></h1>
    <div class="post-footer d-flex align-items-center flex-column flex-sm-row">
      <%= render 'info', :post => @post %>
    </div>
    <div class="post-body">
      <p class="lead"><%= raw(@post.lead) %></p>

      <div class="post-content">
        <%= raw(@post.body) %>
      </div>
    </div>
    <div class="post-tags">
      <a href="#" class="tag">#Business</a><a href="#" class="tag">#Tricks</a><a href="#" class="tag">#Financial</a><a href="#" class="tag">#Economy</a>
    </div>
    <div class="posts-nav d-flex justify-content-between align-items-stretch flex-column flex-md-row">
      <a href="#" class="prev-post text-left d-flex align-items-center">
        <div class="icon prev"><i class="fa fa-angle-left"></i></div>
        <div class="text"><strong class="text-primary">Previous Post </strong>
          <h6>I Bought a Wedding Dress.</h6>
        </div>
      </a><a href="#" class="next-post text-right d-flex align-items-center justify-content-end">
      <div class="text"><strong class="text-primary">Next Post </strong>
        <h6>I Bought a Wedding Dress.</h6>
      </div>
      <div class="icon next"><i class="fa fa-angle-right"> </i></div>
    </a></div>
    <div class="post-comments">
      <header>
        <h3 class="h6">Post Comments<span class="no-of-comments">(<%= @post.comments.length %>)</span></h3>
      </header>
      <% @post.comments.each do |comment| %>
        <div class="comment">
          <div class="comment-header d-flex justify-content-between">
            <div class="user d-flex align-items-center">
              <div class="image">
                <img src="https://d19m59y37dris4.cloudfront.net/blog/1-2/img/user.svg" alt="..." class="img-fluid rounded-circle">
              </div>
              <div class="title"><strong><%= comment.name %></strong><span class="date"><%= comment.created_at %></span>
              </div>
            </div>
          </div>
          <div class="comment-body">
            <%= comment.text %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="add-comment">
      <header>
        <h3 class="h6">Leave a reply</h3>
      </header>

      <% if @comment.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for [@post, @comment] do |f| %>
        <div class="row">
          <div class="form-group col-md-6">
            <%= f.text_field :name, {placeholder: 'Name', class: 'form-control'} %>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :email, {type: 'email', placeholder: 'Email Address (will not be published)', class: 'form-control'} %>
          </div>
          <div class="form-group col-md-12">
            <%= f.text_area :text, {placeholder: 'Type your comment', class: 'form-control', rows: 10} %>
          </div>
          <div class="form-group col-md-12">
            <button type="submit" class="btn btn-secondary">Submit Comment</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>