<%= tinymce_assets %>

<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="alert">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <div class="form-group row">
      <%= f.label :title, {class: 'col-sm-3 col-form-label'} %>
      <div class="col-sm-9">
        <%= f.text_field :title, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :image, {class: 'col-sm-3 col-form-label'} %>
      <div class="col-sm-9">
        <%= f.text_field :image, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :category_id, {class: 'col-sm-3 col-form-label'} %>
      <div class="col-sm-9">
        <%= select("post", "category_id", Category.all.collect {|p| [ p.title, p.id ] }, {}, {class: 'form-control'}) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :lead, {class: 'col-form-label'} %>
      <%= f.text_area :lead, {class: 'form-control tinymce'} %>
    </div>

    <div class="form-group">
      <%= f.label :body, {class: 'col-form-label'} %>
      <%= f.text_area :body, {class: 'form-control tinymce'} %>
    </div>

    <div class="form-group text-right">
      <%= f.submit class: 'btn btn-primary mb-2' %>
    </div>
  </div>
<% end %>

<%= tinymce :plugins => ["image", "link", "paste"] %>
