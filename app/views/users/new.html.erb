<div class="form">
  <h1>Sign Up</h1>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :name, {class: 'col-sm-4 col-form-label'} %>
      <div class="col-sm-8">
        <%= f.text_field :name, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :email, {class: 'col-sm-4 col-form-label'} %>
      <div class="col-sm-8">
        <%= f.text_field :email, {type: 'email', class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, {class: 'col-sm-4 col-form-label'} %>
      <div class="col-sm-8">
        <%= f.password_field :password, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, {class: 'col-sm-4 col-form-label'} %>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12 text-right">
        <%= f.submit class: 'btn btn-primary mb-2' %>
      </div>
    </div>
  <% end %>
</div>